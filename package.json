{
  "name": "remix-app",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "start": "cross-env NODE_ENV=production PORT=8000 PORTS=8433 remix-serve build", 
    "build": "npm run css && remix build",
    "dev": "cross-env NODE_ENV=production PORT=8000 PORTS=8433 remix dev",
    "css": "tailwindcss -m -i ./public/tailwind.css -o ./public/css/app.css",
    "dev:css": "tailwindcss -w -i ./public/tailwind.css -o ./public/css/app.css",
    "dev:watch": "remix watch",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^4.0.0",
    "@remix-run/node": "^1.6.4",
    "@remix-run/react": "^1.6.4",
    "@remix-run/serve": "^1.6.4",
    "@tailwindcss/forms": "^0.5.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.3",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.1",
    "remix-auth": "^3.2.2",
    "remix-auth-form": "^1.1.2",
    "remix-utils": "^3.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.4",
    "@remix-run/eslint-config": "^1.6.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "jest": "^28.1.2",
    "postcss": "^8.4.14",
    "prisma": "^4.0.0",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
